{
	"appId": "com.caren.app",
	"appName": "CAREN",
	"webDir": "dist/public",
	"server": {
		"androidScheme": "https"
	},
	"android": {},
	"plugins": {
		"PushNotifications": {
			"presentationOptions": [
				"badge",
				"sound",
				"alert"
			]
		},
		"LocalNotifications": {
			"smallIcon": "ic_stat_icon_config_sample",
			"iconColor": "#488AFF",
			"sound": "beep.wav"
		},
		"Camera": {
			"permissions": [
				"camera",
				"photos"
			]
		},
		"Geolocation": {
			"permissions": [
				"location"
			]
		},
		"Microphone": {
			"permissions": [
				"microphone"
			]
		}
	},
	"ios": {
		"contentInset": "automatic",
		"backgroundColor": "#ffffff",
		"allowsLinkPreview": false,
		"preferredContentMode": "mobile"
	}
}
